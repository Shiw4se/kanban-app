generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model Board {
  id        String   @id @default(uuid())
  hashedId  String   @unique
  title     String
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String
  order       Int
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
}